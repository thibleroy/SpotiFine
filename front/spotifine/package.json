{
  "name": "spotifine_front",
  "version": "0.0.1",
  "author": "Thibault Leroy",
  "homepage": "https://github.com/thibleroy",
  "scripts": {
    "serve": "node_modules/.bin/ng serve --host=localhost --port=8100",
    "build:dev": "node_modules/.bin/ng build",
    "build:prod": "node_modules/.bin/ng build --prod",
    "copy": "node_modules/.bin/cap copy",
    "open:electron": "./node_modules/.bin/cap open electron",
    "open:android": "./node_modules/.bin/cap open android",
    "open:ios": "./node_modules/.bin/cap open ios",
    "build:": "./npm run build && npm run copy",
    "install:electron": "npm install ./electron",
    "build:windows": "npm run --prefix ./electron build:windows",
    "test:runner": "node_modules/.bin/cypress run",
    "test:dashboard": "node_modules/.bin/cypress open",
    "install:environment": "cd src/environments && npm install",
    "clear:environment": "node ../../scripts/rm.js ./src/environments/dist && node ./../../rm.js ./src/environments/node_modules",
    "set:environment": "npm run install:environment && npm run --prefix ./src/environments set:env"
  },
  "build": {
    "appId": "thibleroy_spotifine",
    "win": {
      "target": "NSIS",
      "icon": "src/assets/icon/icon.ico"
    },
    "extends": null
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~9.1.2",
    "@angular/core": "~9.1.2",
    "@angular/forms": "~9.1.2",
    "@angular/platform-browser": "~9.1.2",
    "@angular/platform-browser-dynamic": "~9.1.2",
    "@angular/router": "~9.1.2",
    "@capacitor/android": "^2.0.1",
    "@capacitor/core": "2.0.1",
    "@capacitor/ios": "^2.0.1",
    "@ionic-native/core": "^5.0.7",
    "@ionic-native/splash-screen": "^5.0.0",
    "@ionic-native/status-bar": "^5.0.0",
    "@ionic/angular": "^5.0.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.5.1",
    "spotify-web-api-js": "^1.2.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.1",
    "@angular/cli": "~9.1.1",
    "@angular/compiler": "~9.1.2",
    "@angular/compiler-cli": "~9.1.2",
    "@angular/language-service": "~9.1.2",
    "@capacitor/cli": "^2.0.1",
    "@ionic/angular-toolkit": "^2.1.1",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "cypress": "^4.4.0",
    "cypress-watch-and-reload": "^1.2.14",
    "ts-node": "^7.0.1",
    "tslint": "~5.15.0",
    "typescript": "~3.8.3"
  },
  "description": "Custom your personalized spotify playlists"
}
